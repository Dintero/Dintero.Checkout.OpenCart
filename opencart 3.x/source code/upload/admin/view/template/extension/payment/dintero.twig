                    {% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              
              
              <div class="form-group">
                <label class="col-sm-3 control-label" for="input-authorization_voided-status">{{ entry_authorization_voided_status }}</label>
                <div class="col-sm-9">
                  <select name="payment_dintero_authorization_voided_status_id" id="input-authorization_voided-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_dintero_authorization_voided_status_id %}
